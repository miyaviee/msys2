set fileformat=unix
set fileencoding=utf-8
set number
set nocompatible
"set cursorline
set backspace=indent,eol,start
set list
set ignorecase
set smartcase
set infercase
set incsearch
set showmatch
set matchtime=1
set nowritebackup
set nobackup
set noswapfile
set lcs=tab:>-,trail:_,extends:\
set conceallevel=0
set clipboard+=unnamed
set mouse-=a

set tabstop=2
set autoindent
set smartindent
set expandtab
set shiftwidth=2

set visualbell t_vb=
set noerrorbells

let g:vim_json_syntax_conceal=0

syntax on
colorscheme slate
